// ============================================================
// PERFIL: JAVA RED HAT BASE (.jsonc)
// Stack: Microsoft + Red Hat + Spring Boot + SonarQube + JetBrains
// Autor: Daniel C√©sar Bertoni de Oliveira
// Objetivo: Ambiente leve, claro e pronto para m√°quinas modestas.
// ============================================================

{
  // ------------------------------------------------------------
  // üß† RECONHECIMENTO AUTOM√ÅTICO DE JSON COM COMENT√ÅRIOS (JSONC)
  // ------------------------------------------------------------
  "files.associations": {
    "*.code-profile": "jsonc",
    "settings.json": "jsonc"
  },

  // ------------------------------------------------------------
  // ‚öôÔ∏è INTERFACE DO VS CODE
  // ------------------------------------------------------------
  "workbench.startupEditor": "newUntitledFile",
  "workbench.editor.labelFormat": "short",
  "workbench.editor.showTabs": true,
  "workbench.iconTheme": "vscode-jetbrains-icon-theme-2023-dark",
  "workbench.colorTheme": "JetBrains Dark Theme",
  "explorer.compactFolders": false,
  "explorer.confirmDragAndDrop": false,

  // ------------------------------------------------------------
  // ‚úçÔ∏è EDITOR DE TEXTO
  // ------------------------------------------------------------
  "editor.fontFamily": "JetBrains Mono, Consolas, 'Courier New', monospace",
  "editor.fontLigatures": true,
  "editor.fontSize": 16,
  "editor.lineHeight": 1.8,
  "editor.rulers": [100, 120],
  "editor.renderLineHighlight": "gutter",
  "editor.minimap.enabled": false,
  "editor.formatOnSave": true,
  "editor.semanticHighlighting.enabled": true,
  "editor.parameterHints.enabled": true,

  // ------------------------------------------------------------
  // üß∞ TERMINAL INTEGRADO
  // ------------------------------------------------------------
  "terminal.integrated.gpuAcceleration": "auto",
  "terminal.integrated.fontFamily": "JetBrains Mono, Consolas, 'Courier New', monospace",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.cursorBlinking": true,

  // ------------------------------------------------------------
  // üîí TELEMETRIA E PRIVACIDADE
  // ------------------------------------------------------------
  "telemetry.telemetryLevel": "off",

  // ------------------------------------------------------------
  // ‚òï JAVA ‚Äî RUNTIME/JDK (somente via JAVA_HOME)
  // ------------------------------------------------------------
  "java.jdt.ls.java.home": "${env:JAVA_HOME}",

  "java.configuration.runtimes": [
    { "name": "JavaSE-25", "path": "${env:JAVA_HOME}", "default": true }
  ],

  // ------------------------------------------------------------
  // ‚öôÔ∏è JAVA ‚Äî LANGUAGE SERVER (desempenho p/ m√°quinas modestas)
  // ------------------------------------------------------------
  "java.jdt.ls.vmargs": "-XX:+UseParallelGC -XX:GCTimeRatio=4 -XX:AdaptiveSizePolicyWeight=90 -Dsun.zip.disableMemoryMapping=true -Xms128m -Xmx512m",

  // ------------------------------------------------------------
  // üéØ JAVA ‚Äî FORMATA√á√ÉO (GOOGLE JAVA STYLE)
  // ------------------------------------------------------------
  "java.format.settings.url": "https://raw.githubusercontent.com/google/styleguide/gh-pages/eclipse-java-google-style.xml",
  "java.format.settings.profile": "GoogleStyle",

  // ------------------------------------------------------------
  // üì¶ JAVA ‚Äî BUILD/AUTO UPDATE
  // ------------------------------------------------------------
  "java.configuration.updateBuildConfiguration": "automatic",
  "java.showBuildStatusOnStart.enabled": true,
  "java.errors.incompleteClasspath.severity": "ignore",

  // ------------------------------------------------------------
  // üå∏ SPRING BOOT (Microsoft + VMware)
  // ------------------------------------------------------------
  "spring-boot.ls.java.home": "${env:JAVA_HOME}",
  "spring-boot.ls.vmargs": "-Xms128m -Xmx512m",
  "spring.initializr.defaultLanguage": "Java",
  "spring.initializr.defaultPackaging": "jar",
  "spring.initializr.defaultGroupId": "br.com.bertoni",
  "spring.initializr.defaultJavaVersion": "25",

  // ------------------------------------------------------------
  // üîç SONARQUBE FOR IDE (antigo SonarLint) ‚Äî modo leve
  // ------------------------------------------------------------
  "sonarlint.analyzer.runMode": "onSave",
  "sonarlint.output.showAnalyzerLogs": false,
  "sonarlint.connectedMode.enabled": false,
  "sonarlint.rules": {
    "java:S106": { "level": "off" },
    "java:S117": { "level": "info" }
  },

  // ------------------------------------------------------------
  // üß© EXTENS√ïES E RECOMENDA√á√ïES
  // ------------------------------------------------------------
  "extensions.ignoreRecommendations": false,
  "extensions.autoUpdate": true,

  // ------------------------------------------------------------
  // üß† INTELLICODE
  // ------------------------------------------------------------
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",

  // ------------------------------------------------------------
  // üìÅ ORGANIZA√á√ÉO E LIMPEZA
  // ------------------------------------------------------------
  "files.exclude": {
    "**/.classpath": true,
    "**/.project": true,
    "**/.settings": true,
    "**/target": true,
    "**/.factorypath": true
  },

  // ------------------------------------------------------------
  // üîé AJUSTES DIVERSOS
  // ------------------------------------------------------------
  "search.smartCase": true
}
